><div class=\"line\"><span class=\"meta\">#<span class=\"meta-keyword\">include</span> <span class=\"meta-string\">&lt;cstring&gt;</span></span></div><div class=\"line\"><span class=\"meta\">#<span class=\"meta-keyword\">include</span> <span class=\"meta-string\">&lt;cstdlib&gt;</span></span></div><div class=\"line\"><span class=\"meta\">#<span class=\"meta-keyword\">include</span> <span class=\"meta-string\">&lt;cmath&gt;</span></span></div><div class=\"line\"><span class=\"meta\">#<span class=\"meta-keyword\">include</span> <span class=\"meta-string\">&lt;algorithm&gt;</span></span></div><div class=\"line\"><span class=\"meta\">#<span class=\"meta-keyword\">include</span> <span class=\"meta-string\">&lt;queue&gt;</span></span></div><div class=\"line\"><span class=\"meta\">#<span class=\"meta-keyword\">include</span> <span class=\"meta-string\">&lt;set&gt;</span></span></div><div class=\"line\"><span class=\"meta\">#<span class=\"meta-keyword\">include</span> <span class=\"meta-string\">&lt;ctime&gt;</span></span></div><div class=\"line\"><span class=\"meta\">#<span class=\"meta-keyword\">define</span> eps 1e-8</span></div><div class=\"line\"><span class=\"keyword\">using</span> <span class=\"keyword\">namespace</span> <span class=\"built_in\">std</span>;</div><div class=\"line\"><span class=\"keyword\">const</span> <span class=\"keyword\">int</span> MAXN=<span class=\"number\">20005</span>,INF=<span class=\"number\">10000</span>;</div><div class=\"line\"></div><div class=\"line\"><span class=\"keyword\">int</span> N,cCnt,curCnt;</div><div class=\"line\"></div><div class=\"line\"><span class=\"keyword\">struct</span> node&#123;</div><div class=\"line\">\t<span class=\"keyword\">double</span> x,y;</div><div class=\"line\">\tnode <span class=\"keyword\">operator</span> - (<span class=\"keyword\">const</span> node a)<span class=\"keyword\">const</span>&#123;</div><div class=\"line\">\t\tnode ans;</div><div class=\"line\">\t\tans.x=x-a.x; ans.y=y-a.y;</div><div class=\"line\">\t\t<span class=\"keyword\">return</span> ans;</div><div class=\"line\">\t&#125;</div><div class=\"line\">&#125;Point[MAXN],P[MAXN],Q[MAXN];</div><div class=\"line\"></div><div class=\"line\"><span class=\"keyword\">struct</span> NODE&#123;</div><div class=\"line\">\tnode s,t;</div><div class=\"line\">&#125;Line[MAXN];</div><div class=\"line\"></div><div class=\"line\"></div><div class=\"line\"><span class=\"function\"><span class=\"keyword\">int</span> <span class=\"title\">dcmp</span><span class=\"params\">(<span class=\"keyword\">double</span> x)</span></span>&#123;</div><div class=\"line\">\t<span class=\"keyword\">if</span>(x&gt;eps)<span class=\"keyword\">return</span> <span class=\"number\">1</span>;</div><div class=\"line\">\t<span class=\"keyword\">else</span> <span class=\"keyword\">if</span>(x&lt;-eps)<span class=\"keyword\">return</span> <span class=\"number\">-1</span>;</div><div class=\"line\">\t<span class=\"keyword\">else</span> <span class=\"keyword\">return</span> <span class=\"number\">0</span>;</div><div class=\"line\">&#125;</div><div class=\"line\"></div><div class=\"line\"><span class=\"function\"><span class=\"keyword\">double</span> <span class=\"title\">Cross</span><span class=\"params\">(node p0,node p1,node p2)</span></span>&#123;</div><div class=\"line\">\t<span class=\"keyword\">return</span> (p1.x-p0.x)*(p2.y-p0.y)-(p1.y-p0.y)*(p2.x-p0.x);</div><div class=\"line\">&#125;</div><div class=\"line\"></div><div class=\"line\"><span class=\"function\">node <span class=\"title\">Getpoint</span><span class=\"params\">(node p1,node p2,node p3,node p4)</span></span>&#123;</div><div class=\"line\">\tnode ans,tmp=p2-p1;</div><div class=\"line\">\t<span class=\"keyword\">double</span> k1=Cross(p1,p4,p3);</div><div class=\"line\">\t<span class=\"keyword\">double</span> k2=Cross(p2,p3,p4);</div><div class=\"line\">\tans.x=p1.x+tmp.x*k1/(k1+k2);</div><div class=\"line\">\tans.y=p1.y+tmp.y*k1/(k1+k2);</div><div class=\"line\">\t<span class=\"keyword\">return</span> ans;</div><div class=\"line\">&#125;</div><div class=\"line\"></div><div class=\"line\"><span class=\"function\"><span class=\"keyword\">double</span> <span class=\"title\">Area</span><span class=\"params\">()</span></span>&#123;</div><div class=\"line\">\t<span class=\"keyword\">double</span> ans=<span class=\"number\">0.0</span>;</div><div class=\"line\">\t<span class=\"keyword\">for</span>(<span class=\"keyword\">int</span> i=<span class=\"number\">1</span>;i&lt;=cCnt;i++)&#123;</div><div class=\"line\">\t\tans+=P[i].x*P[i+<span class=\"number\">1</span>].y-P[i].y*P[i+<span class=\"number\">1</span>].x;</div><div class=\"line\">\t&#125;</div><div class=\"line\">\t<span class=\"keyword\">return</span> <span class=\"built_in\">fabs</span>(ans/<span class=\"number\">2.0</span>);</div><div class=\"line\">&#125;</div><div class=\"line\"></div><div class=\"line\"><span class=\"function\"><span class=\"keyword\">void</span> <span class=\"title\">Work</span><span class=\"params\">()</span></span>&#123;</div><div class=\"line\">\tP[<span class=\"number\">1</span>].x=P[<span class=\"number\">5</span>].x=<span class=\"number\">0</span>; P[<span class=\"number\">1</span>].y=P[<span class=\"number\">5</span>].y=<span class=\"number\">0</span>;</div><div class=\"line\">\tP[<span class=\"number\">2</span>].x=INF; P[<span class=\"number\">2</span>].y=<span class=\"number\">0</span>;</div><div class=\"line\">\tP[<span class=\"number\">3</span>].x=INF; P[<span class=\"number\">3</span>].y=INF;</div><div class=\"line\">\tP[<span class=\"number\">4</span>].x=<span class=\"number\">0</span>;   P[<span class=\"number\">4</span>].y=INF;</div><div class=\"line\">\t<span class=\"comment\">//限定范围 </span></div><div class=\"line\">\tcCnt=<span class=\"number\">4</span>; curCnt=<span class=\"number\">0</span>;</div><div class=\"line\">\t<span class=\"keyword\">for</span>(<span class=\"keyword\">int</span> i=<span class=\"number\">1</span>;i&lt;=N;i++)&#123;</div><div class=\"line\">\t\tcurCnt=<span class=\"number\">0</span>;</div><div class=\"line\">\t\t<span class=\"keyword\">for</span>(<span class=\"keyword\">int</span> j=<span class=\"number\">1</span>;j&lt;=cCnt;j++)&#123;</div><div class=\"line\">\t\t\t<span class=\"keyword\">if</span>(Cross(Line[i].s,Line[i].t,P[j]) &gt;= <span class=\"number\">0</span>)Q[++curCnt]=P[j];</div><div class=\"line\">\t\t\t<span class=\"comment\">//如果线段在点p[j]的逆时针方向，那么这个点就是可以的</span></div><div class=\"line\">\t\t\t<span class=\"keyword\">if</span>(Cross(Line[i].s,Line[i].t,P[j])*Cross(Line[i].s,Line[i].t,P[j+<span class=\"number\">1</span>]) &lt; <span class=\"number\">0</span>)</div><div class=\"line\">\t\t\t<span class=\"comment\">//直线与原来的限定直线有交点，把交点放进去 </span></div><div class=\"line\">\t\t\t\tQ[++curCnt]=Getpoint(Line[i].s,Line[i].t,P[j],P[j+<span class=\"number\">1</span>]);</div><div class=\"line\">\t\t&#125;</div><div class=\"line\">\t\tQ[curCnt+<span class=\"number\">1</span>]=Q[<span class=\"number\">1</span>];</div><div class=\"line\">\t\t<span class=\"keyword\">for</span>(<span class=\"keyword\">int</span> j=<span class=\"number\">1</span>;j&lt;=curCnt+<span class=\"number\">1</span>;j++)P[j]=Q[j];</div><div class=\"line\">\t\tcCnt=curCnt;</div><div class=\"line\">\t&#125;</div><div class=\"line\">\t<span class=\"built_in\">printf</span>(<span class=\"string\">\"%.1f\\n\"</span>,Area());</div><div class=\"line\">&#125;</div><div class=\"line\"></div><div class=\"line\"><span class=\"function\"><span class=\"keyword\">void</span> <span class=\"title\">Clear</span><span class=\"params\">()</span></span>&#123;</div><div class=\"line\">\t<span class=\"built_in\">memset</span>(Point,<span class=\"number\">0</span>,<span class=\"keyword\">sizeof</span>(Point));</div><div class=\"line\">\t<span class=\"built_in\">memset</span>(P,<span class=\"number\">0</span>,<span class=\"keyword\">sizeof</span>(P));</div><div class=\"line\">\t<span class=\"built_in\">memset</span>(Q,<span class=\"number\">0</span>,<span class=\"keyword\">sizeof</span>(Q));</div><div class=\"line\">\t<span class=\"built_in\">memset</span>(Line,<span class=\"number\">0</span>,<span class=\"keyword\">sizeof</span>(Line));</div><div class=\"line\">\tcurCnt=cCnt=<span class=\"number\">0</span>;</div><div class=\"line\">&#125;</div><div class=\"line\"></div><div class=\"line\"><span class=\"function\"><span class=\"keyword\">int</span> <span class=\"title\">main</span><span class=\"params\">()</span></span>&#123;</div><div class=\"line\">\t<span class=\"keyword\">double</span> a,b,c,d;</div><div class=\"line\">\t<span class=\"keyword\">while</span>(~<span class=\"built_in\">scanf</span>(<span class=\"string\">\"%d\"</span>,&amp;N))&#123;</div><div class=\"line\">\t\tClear();</div><div class=\"line\">\t\t<span class=\"keyword\">for</span>(<span class=\"keyword\">int</span> i=<span class=\"number\">1</span>;i&lt;=N;i++)&#123;</div><div class=\"line\">\t\t\t<span class=\"built_in\">scanf</span>(<span class=\"string\">\"%lf%lf%lf%lf\"</span>,&amp;a,&amp;b,&amp;c,&amp;d);</div><div class=\"line\">\t\t\tLine[i].s.x=a; Line[i].s.y=b;</div><div class=\"line\">\t\t\tLine[i].t.x=c; Line[i].t.y=d;</div><div class=\"line\">\t\t&#125;</div><div class=\"line\">\t\tWork();</div><div class=\"line\">\t&#125;</div><div class=\"line\">\t<span class=\"keyword\">return</span> <span class=\"number\">0</span>;</div><div class=\"line\">&#125;</div></pre></td></tr></table></figure>"}